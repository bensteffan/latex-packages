    skipabove = 1ex,
    linecolor = black,
    linewidth = 1pt,
    rightline = false,
    topline = false,
    bottomline = false,
    innertopmargin = 0,
    innerrightmargin = 0,
}

\mdfdefinestyle{breakoutthms-exercisestyle}{
    skipabove = 2ex,
    linecolor = black,
    linewidth = 1pt,
    rightline = false,
    topline = false,
    bottomline = false,
    innertopmargin = 0,
    innerrightmargin = 0,
}

\mdfdefinestyle{breakoutthms-blockstyle}{
    skipabove = 1.5ex,
    linecolor = black,
    linewidth = 1.1pt,
}

\newenvironment{thmblock}
	{\begin{mdframed}[style = breakoutthms-blockstyle]}
	{\end{mdframed}}

\NewDocumentCommand\bsteffan@DeclareBilingualMdtheoremenv{O{}momm}{%
	\IfNoValueTF{#3}
